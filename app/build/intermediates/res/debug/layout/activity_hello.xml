<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ninahp.smartpark.HelloActivity"
    android:id="@+id/helloActivityLayout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offer"
        android:id="@+id/offerButton"
        android:onClick="offer"
        android:layout_marginBottom="66dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/timeTextView2"
        android:layout_toStartOf="@+id/timeTextView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/searchButton"
        android:onClick="search"
        android:layout_alignTop="@+id/offerButton"
        android:layout_alignRight="@+id/locationEditText"
        android:layout_alignEnd="@+id/locationEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter street name"
        android:id="@+id/locationTextView1"
        android:layout_marginTop="51dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/locationEditText"
        android:layout_below="@+id/locationTextView1"
        android:layout_alignLeft="@+id/offerButton"
        android:layout_alignStart="@+id/offerButton"
        android:text="Kolodvorska 10 Ljubljana" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time"
        android:id="@+id/timeTextView2"
        android:layout_below="@+id/locationEditText"
        android:layout_centerHorizontal="true" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:layout_below="@+id/timeTextView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hello "
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/uidTextView"
        android:layout_toLeftOf="@+id/locationEditText"
        android:layout_toStartOf="@+id/locationEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/uidTextView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/locationEditText"
        android:layout_alignStart="@+id/locationEditText"
        android:layout_alignRight="@+id/creditsTextView"
        android:layout_alignEnd="@+id/creditsTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You have "
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" "
        android:id="@+id/creditsTextView"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

</RelativeLayout>
